---
interface Props {
  title: string;
  description?: string;
}

import siteConfig from '../content/site.json';

const { title, description = siteConfig.description || siteConfig.name } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-cream text-primary font-sans flex flex-col">
    <header class="border-b border-primary/10">
      <nav class="max-w-4xl mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <a href="/" class="text-xl font-bold tracking-tight">
            <span class="text-accent">DevOps</span> Thessalon√≠ki
          </a>
          <ul class="flex gap-6 text-sm font-mono">
            <li><a href="/" class="hover:text-accent transition-colors">Home</a></li>
            <li><a href="/events/" class="hover:text-accent transition-colors">Events</a></li>
            <li><a href="/contact/" class="hover:text-accent transition-colors">Contact</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <main class="flex-1">
      <slot />
    </main>

    <footer class="border-t border-primary/10 mt-auto">
      <div class="max-w-4xl mx-auto px-4 py-6 text-center text-sm font-mono text-primary/60">
        <p>&copy; {new Date().getFullYear()} {siteConfig.name}</p>
      </div>
    </footer>
  </body>
</html>
